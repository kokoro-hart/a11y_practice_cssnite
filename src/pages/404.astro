---
import NotFound from "@/features/NotFound/NotFound.astro"
import AppLayout from "@/layouts/AppLayout/AppLayout.astro"
import Container from "@/layouts/Container/Container.astro"
import LayoutWithBreadcrumbs from "@/layouts/LayoutWithBreadcrumbs/LayoutWithBreadcrumbs.astro"

const meta = {
  title: "404 page not found",
  description: "The page you are looking for could not be found.",
}
---

<AppLayout meta={meta} theme={"tokyo"}>
  <LayoutWithBreadcrumbs page={"notFound"} className={"md:pt-[61px] lg:pt-[112px]"} size={"xl"}>
    <Container className={"pt-[71px] md:pt-[25px] lg:pt-[65px]"}>
      <NotFound />
    </Container>
  </LayoutWithBreadcrumbs>
</AppLayout>
