---
// @ts-nocheck
import type { HTMLAttributes } from "astro/types"

import styles from "./LinkPrimary.module.scss"

import type { Area, PropsWithClassName } from "@/types"
import type { HTMLTagString } from "@/types/astro"

type Props = HTMLAttributes<"a"> &
  PropsWithClassName & {
    theme: Area
    tag?: HTMLTagString
    size?: "sm" | "md"
  }

const { tag: Tag = "a", theme, size = "md", className, ...props } = Astro.props
---

<Tag class:list={[styles.linkPrimary, className]} data-theme={theme} {...props} data-size={size}>
  <slot />
  <svg width="11" height="17" viewBox="0 0 11 17" class={styles.linkPrimary__arrow}>
    <path
      d="M0.887695 14.1374L7.00768 8.01743L0.887695 1.88409L2.7718 0L10.7892 8.01743L2.7718 16.0349L0.887695 14.1374Z"
    >
    </path>
  </svg>
</Tag>
