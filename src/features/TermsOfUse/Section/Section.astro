---
import styles from "./Section.module.scss"

import Heading from "@/components/Heading/Heading.astro"
import type { PropsWithClassName } from "@/types"

type Props = PropsWithClassName & {
  title: string
  contents: {
    title: string
    desc: string
  }[]
}

const { title, contents, className } = Astro.props
---

<section class:list={[styles.section, className]}>
  <Heading tag={"h2"} size={"xs"}>
    {title}
  </Heading>
  <ol class={styles.section__list}>
    {
      contents.map(({ title, desc }, index) => (
        <li class={styles.section__item}>
          <h3 class={styles.section__itemTitle} set:html={`${index + 1}. ${title}`} />
          <p class={styles.section__itemDesc} set:html={desc} />
        </li>
      ))
    }
  </ol>
</section>
